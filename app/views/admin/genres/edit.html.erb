<div class="container">
  <div class="row mt-2">
    <div class="col-5"><h4><span style="background-color:#d3d3d3;">ジャンル編集</span></h4></div>
  </div>

  <div class="mt-3">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
