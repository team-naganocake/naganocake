<!--<h1>Public::Customers#show</h1>-->
<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
      <div class="ml-5 mb-3">
        <h4><span style="background-color:#d3d3d3;">マイページ</span></h4>
      </div>
  </div>

  <table>
    <tr>
      <th width="80">登録情報</th>
      <td><%= link_to "編集する", customers_information_edit_path(@customer.id), class: "btn btn-success btn-sm" %></td>
    </tr>
  </table>


  <table border="2" style="border-collapse: collapse">
    <div class="mt-3">
      <tr>
        <th width="170" bgcolor="#d3d3d3">氏名</th>
        <td width="400">
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <th bgcolor="#d3d3d3">カナ</th>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th bgcolor="#d3d3d3">郵便番号</th>
        <td>
          <%= @customer.postal_code %>
        </td>
      </tr>
      <tr>
        <th bgcolor="#d3d3d3">住所</th>
        <td>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <th bgcolor="#d3d3d3">電話番号</th>
        <td>
          <%= @customer.telephone_number %>
        </td>
      </tr>
      <tr>
        <th bgcolor="#d3d3d3">メールアドレス</th>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </div>
  </table>


  <table>
    <div class="mt-3">
      <tr>
        <th width="80">配送先</th>
        <td><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <tr>
        <th>注文履歴</th>
        <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary btn-sm mt-2" %></td>
      </tr>
    </div>
  </table>

</div>