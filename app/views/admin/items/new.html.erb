<h1>Admin::Items#new</h1>

<%#= flash[:notice]%>
<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
<!--urlはidmin/items#create-->

    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %><br>
    <label>商品名</label>
    <%= f.text_field :name %><br>
    <label>商品説明</label>
    <%= f.text_area :introduction %><br>
    <label>ジャンル</label>
    ここは後回し<br>
    <label>税抜価格</label>
    <%= f.text_field :price %><br>
    <!--カンマをつけたりするのは後回し-->
    <label>販売ステータス</label>
    <label><%= f.radio_button :is_active, "true" %>販売中</label>
    <label><%= f.radio_button :is_active, "false" %>販売停止中</label>

    <%= f.submit '新規登録', class: "btn btn-secondary" %>

<% end %>