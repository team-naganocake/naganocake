<div class="container">
  <div class="row mb-4">
    <div class="col-2"></div><div class="col-2"><h4><span style="background-color:#d3d3d3;">商品詳細</span></h4></div>
  </div>


  <div class="row">
    <div class="col-lg-5 text-right">
      <%= image_tag @item.image, size: "200x200" %>
    </div>

    <div class="col-lg-7">
      <table>
        <tr>
          <th width="160">商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格<br>(税抜価格）
          </th>
          <td><%= (@item.price*1.1).floor.to_s(:delimited) %>  (<%= @item.price.to_s(:delimited) %>)円</td>
          <!--.floorは小数点以下切り捨て-->
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active %>
            <font color="#32cd32">販売中</font>
            <% else %>
            <font color="#a9a9a9">販売停止中</font>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <div class="actions mt-3 ml-5">
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success w-20" %>
            </div>
          </th>
        </tr>
      </table>

       <!--<div class="ml-5 mt-3">-->
        <!--<%#= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success w-20" %>-->
      <!--</div>-->
    </div>
  </div>

</div>