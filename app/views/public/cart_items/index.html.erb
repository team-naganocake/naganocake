<h1>Public::CartItems#index</h1>

<h2>ショッピングカート</h2>

<table>
  <thead>
    <tr>
      <th colspan="2">商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <!--destroy_allがうまくいかない-->
      <%# if cart_item.customer == current_customer %>
        <%#= link_to 'カートを空にする'，cart_items_destroy_all_path, method: :delete %>
      <%# end %>

      <% @total = @total + cart_item.subtotal %>

      <tr>
        <td><%= image_tag cart_item.item.image, size: "70x50" %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url:cart_item_path(cart_item.id), method: :patch do |f| %>
          <!--urlはpublic/cart_items#update-->
             <%= f.select :amount, *[1..10] %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        <td>
          <% if cart_item.customer == current_customer %>
            <%= link_to '削除する', cart_item_path(cart_item), method: :delete %>
          <% end %>
        </td>
        <!--試しに部ifの部分をコントローラに書いてみたけど、それでも問題なかった-->
      </tr>
  　<% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= @total.to_s(:delimited) %></td>
  </tr>
</table>


<%= link_to '買い物を続ける', root_path %>
