<h1>Public::CartItems#index</h1>

<h2>ショッピングカート</h2>

<%#= link_to "カートを空にする"，_path %>

<table>
  <thead>
    <tr>
      <th colspan="2">商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.image, size: "70x50" %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price.to_s(:delimited) %></td>

      </tr>
  　<% end %>
  </tbody>
</table>
