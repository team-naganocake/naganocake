<h1>Admin::Items#new</h1>

<%#= flash[:notice]%>
<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
<!--urlはidmin/items#create-->

    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %><br>
    <label>商品名</label>
    <%= f.text_field :name, placeholder: "商品名" %><br>
    <label>商品説明</label>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>
    <label>ジャンル</label>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %><br>
    <!--レイアウト編集時、プルダウンの表示かえる-->
    <label>税抜価格</label>
    <%= f.text_field :price, placeholder: "1000" %><br>
    <!--カンマをつけたりするのは後回し-->
    <label>販売ステータス</label>
    <label><%= f.radio_button :is_active, "true" %>販売中</label>
    <label><%= f.radio_button :is_active, "false" %>販売停止中</label>

    <%= f.submit '新規登録', class: "btn btn-secondary" %>

<% end %>