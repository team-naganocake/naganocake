<h1>Public::Orders#confirm</h1>

<h4>注文情報確認</h4>
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <table>
    <thead>
      <tr>
        <th colspan="2">商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
      <% @total = @total + cart_item.subtotal %>

        <tr>
          <td><%= image_tag cart_item.item.image, size: "70x50" %></td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %>
          <td><%= cart_item.amount %></td>
          <!--amountはcart_itemsテーブルにあるカラム名。nameはItemsテーブルにあるカラム名-->
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
    <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total.to_s(:delimited) %></td>
    <!--必要なデータだけ送ればいい。計算のようなのはいらない。最終的なのだけ送ればいい-->
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @order.shipping_cost + @total %></td>
    <%= f.hidden_field :total_payment, :value => @order.shipping_cost + @total %>
    <!--ここのtotal_paymentはただ名前をつけてるだけ。だから今回は定義してなくても大丈夫。もちろん定義は必要な場合もある。-->
  </tr>
  <tr>
</table>


    支払方法
      <%= @order.payment_method_i18n %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>

    お届け先
      〒<%= @order.postal_code %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= @order.address %><br>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= @order.name %>
      <%= f.hidden_field :name, :value => @order.name %>


    <!--urlは、public/oders#create-->
      <%= f.submit "注文を確定する" %>
      <!--コントローラーに遷移先を記述-->
    <% end %>