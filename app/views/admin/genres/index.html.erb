<h1>Admin::Genres#index</h1>

<h2>ジャンル一覧・追加</h2>

<%= form_with model: Genre.new, url: admin_genres_path, method: :post do |f| %>
<!--最初@genreにしていた。Genre.newの書き方は合っているか？-->
  <label for="inputName">ジャンル名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <%= f.submit '新規登録', class: "btn btn-secondary" %>
<% end %>

ジャンル<br>
<% @genres.each do |genre| %>
　<%= genre.name %>
　<%= link_to "編集する", edit_admin_genre_path(genre.id) %><br>
<% end %>